{% extends 'base.html.twig' %}

{% block title %} Mes informations - SNIW, centrale d'achat export.{% endblock %}

{% block body %}
    <body>
    <div class="background">
        <div class="columns-container container societe_container">
            <div class="rte">
                <div class="row">
                    <div class="col mt-3 resp-head">

                        <!-- Breadcrumbs -->

                        <div class="breadcrumbs d-flex flex-row align-items-center">
                            <ul>
                                <li><a href="{{ path('home') }}" style="color:grey">Home</a></li>
                                <li> <i class="fa fa-angle-right"> </i><a href="#" style="color:grey">Mon compte </a></li>
                                <li class="active"><i class="fa fa-angle-right" aria-hidden="true"> </i>Mes informations
                                </li>
                            </ul>
                        </div>

                    </div>
                </div>




                <form class="contact-form" method="post" >
                    <fieldset>

                        <div class="form-row">


                            {{ form_start(form) }}


                            <!--  Success Message  -->


                            {% if app.session.flashBag.has('success')  %}
                                <div class="form-group col-md-6">
                                    {% for message in app.flashes('success') %}

                                        <div class="alert alert-success">
                                            {{ message }}
                                        </div>
                                    {% endfor%}
                                </div>
                                <div class="form-group col-md-6"></div>
                            {% endif %}



                            <!-- Invalid data Message -->

                            {% if not form.vars.valid %}
                                <div class="form-group col-md-6">
                                    <div class="alert alert-danger">
                                        Champs invalides
                                    </div>
                                </div>
                                <div class="form-group col-md-6"></div>
                            {% endif %}


                            <div class="form-group col-md-6">
                                {{ form_row(form.Titre) }}
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_row(form.societe) }}
                            </div>

                            <div class="form-group col-md-6">
                                {{ form_row(form.nom) }}
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_row(form.prenom) }}
                            </div>

                            <div class="form-group col-md-6">
                                {{ form_row(form.email) }}
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_row(form.superficieMagasin) }}
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_row(form.plainPassword.first, { 'label' : 'Nouveau mot de passe', 'required' : false , 'attr': { 'placeholder': false} }) }}
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_row(form.plainPassword.second, {'label' : 'Répéter le nouveau mot de passe','required': false }) }}
                            </div>
                            {% if is_granted('ROLE_ADMIN') %}
                                <div class="form-group col-md-6">
                                    {{ form_row(form.id_groupe) }}
                                </div>
                            {% endif %}




                        </div>

                        <div class="mt-4 text-center">
                            <button id="review_submit"  class="red_button message_submit_btn trans_300"  > Enregistrer</button>
                        </div>
                        {{ form_end(form) }}
                    </fieldset>
                </form>


                {% include 'partiels/footer.html.twig' %}
            </div>
        </div>
    </div>
    </body>
{% endblock %}

{% block javascripts %}

{% endblock %}